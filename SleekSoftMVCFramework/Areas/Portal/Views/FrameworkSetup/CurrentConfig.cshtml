
@model SleekSoftMVCFramework.ViewModel.FrameworkSetupViewModel

@{
    Layout = "~/Views/Shared/_APPNotificationPartial.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Current Settings For Portal Configuration</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DefaultSetting.FrameworkName)

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DefaultSetting.FrameworkName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.DefaultSetting.FrameworkVersion)

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DefaultSetting.FrameworkVersion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DefaultSetting.IOC)

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DefaultSetting.IOC, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DefaultSetting.FrameworkDescription)

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.DefaultSetting.FrameworkDescription, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly",@rows="80",@cols="4" } })
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>

                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col (left) -->
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"> </h3>
                </div>
                <div class="box-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.DefaultSetting.DefaultDatabaseEngine)

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DefaultSetting.DefaultDatabaseEngine, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DefaultSetting.TargetServer)

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DefaultSetting.TargetServer, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DefaultSetting.Developed)

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DefaultSetting.Developed, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DefaultSetting.Graphic)

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.DefaultSetting.Graphic, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>
                </div>
                <!-- /.box-body -->
            </div>

        </div>
        <!-- /.col (right) -->
        @using (Html.BeginForm())
        {
            <div class="box-footer pull-right">
                <input type="submit" value="<< Back" name="backButton" class="btn btn-info" /> &nbsp; <input type="submit" value="Next >>" name="nextButton" class="btn btn-primary" />
            </div>
        }
        

    </div>
</section>




