
@model SleekSoftMVCFramework.ViewModel.TopicViewModel
@using SleekSoftMVCFramework.Utilities

<div class="post">
    <div class="user-block">
        @if (Model.CreateByUserAvatar == null)
        {
            <img class="img-circle img-bordered-sm" src="@Url.Content("~/img/user2-160x160.jpg")" alt="@Model.CreateByUserName">
        }
        else if (Model.CreateByUserAvatar != null)
        {
            <img class="img-circle img-bordered-sm" src="@Url.Content("~/FileUploadedDoc/" + Model.CreateByUserAvatar)" alt="@Model.CreateByUserName">
        }
        <span class="username">
            <a href="#"><small><b>Category:  </b></small>  <span class="label label-success">@Model.TopicCategory</span></a>
        </span>
        <span class="pull-right">
            <a class="link-black text-sm followlink" id="followlink" data-id="@Model.Id" style="@Html.Raw(Model.IsFollowing.GetValueOrDefault() == 0 ? "display:true;" : "display:none;")"> <b>+ Follow</b>  </a>
            <a class="link-black text-sm unfollowlink" id="aunfollowlink" data-id="@Model.Id" style="@Html.Raw(Model.IsFollowing.GetValueOrDefault() == 0 ? "display:none;" : "display:true;")"> <b>- UnFollow</b>  </a>

          
        </span>
        <span class="description">Post By @Model.CreateByUserName @Html.Raw(@ExtentionUtility.GetPrettyDate(Model.DateCreated))</span>
    </div>

    <a href="@Url.Action("Index","Post", new { code = @ExtentionUtility.EncryptIntID(@Model.Id.GetValueOrDefault()) } )"><p>@Model.Title</p></a>

    <ul class="list-inline">
        <li><a href="" class="link-black text-sm"><i class="fa fa-eye margin-r-5"></i> View (@Model.TopicView.GetValueOrDefault())</a></li>
        <li class="pull-right">
            <a href="#" class="link-black text-sm">
                <i class="fa fa-comments-o margin-r-5"></i> Comments (@Model.NoOfPost.GetValueOrDefault())
            </a>
        </li>
    </ul>
</div>
