

@model SleekSoftMVCFramework.Models.SetFirstPasswordViewModel
@{
    ViewBag.Title = "Set First Login Password";
    Layout = "~/Views/Shared/_APPLoginPartial.cshtml";
}

<div class="register-box-body">
    <p class="login-box-msg"><b>VATEBRA EVENT <b />Set First Login Password</p>
    @using (Html.BeginForm("SetFirstLogin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.code)

        <div class="form-group has-feedback">
            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", @placeholder = "Current Password" })
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>

        <div class="form-group has-feedback">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Retype password" })
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">

            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
            </div>
            <!-- /.col -->
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




